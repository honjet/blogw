<div class="container-xl">
  <h1>みんなのページ</h1>

  <table class="table table-dark box-darker">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">ユーザ名</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row">
            <%= user.id %>
          </th>
          <td>
            <%= link_to page_path(user.username) do %>
              <%= user.username %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
