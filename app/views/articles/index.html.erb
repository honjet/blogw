<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>作成日</th>
      <th>ユーザ</th>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= l article.created_at %></td>
        <td><%= article.user.username %></td>
        <td><%= article.title %></td>
        <td><%= article.body_head %></td>
        <td><%= link_to 'Show', article %></td>
        <% if article.user == current_user %>
          <td><%= link_to 'Edit', edit_user_article_path(article) %></td>
          <td><%= link_to 'Destroy', user_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Article', new_user_article_path %>
<% end %>
